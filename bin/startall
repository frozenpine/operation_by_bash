#!/bin/bash

[[ -L $0 ]] && SCRIPT_FILE=`readlink -fn $0` || SCRIPT_FILE=$0
pushd `dirname "${SCRIPT_FILE}"` >/dev/null
BASE_DIR=`pwd`
popd >/dev/null

source "${BASE_DIR}/module.d/common.sh" || exit 1

${BASE_DIR}/zk start
sleep 1
${BASE_DIR}/zk status
sleep 1
${BASE_DIR}/kfk create
sleep 1
${BASE_DIR}/kfk status
sleep 1
${BASE_DIR}/kfk topic --list
sleep 1
${BASE_DIR}/manage init
sleep 1
${BASE_DIR}/manage start
sleep 1
${BASE_DIR}/manage status
sleep 1
${BASE_DIR}/trade start
sleep 1
${BASE_DIR}/trade status
sleep 1
${BASE_DIR}/market start
sleep 1
${BASE_DIR}/market status
