#!/bin/bash

[[ -L $0 ]] && SCRIPT_FILE=`readlink -fn $0` || SCRIPT_FILE=$0
pushd `dirname "${SCRIPT_FILE}"` >/dev/null
BASE_DIR=`pwd`
popd >/dev/null

while getopts :uh FLAG; do
    case $FLAG in
        h)
            help_message >&2
            exit
        ;;
        *)
            error "invalid args: $*"
            help_message >&2
            exit 1
        ;;
    esac
done
shift $((OPTIND-1))

source "${BASE_DIR}/module.d/common.sh" || exit 1

${BASE_DIR}/trade destory
${BASE_DIR}/manage destory

${BASE_DIR}/market stop

${BASE_DIR}/kfk destory
${BASE_DIR}/zk destory

${BASE_DIR}/allssh docker system prune -f
